<root>
	<!-- 错误码类别为:uint16 -->
	
	<MERCURY_SUCCESS>
		<id>0</id>
		<descr>	无错误(通常表达成功)。</descr>
	</MERCURY_SUCCESS>
	
	<MERCURY_ERR_SRV_NO_READY>
		<id>1</id>
		<descr>	服务器没有准备好。</descr>
	</MERCURY_ERR_SRV_NO_READY>

	<MERCURY_ERR_SRV_OVERLOAD>
		<id>2</id>
		<descr>	服务器负载过重。</descr>
	</MERCURY_ERR_SRV_OVERLOAD>
	
	<MERCURY_ERR_ILLEGAL_LOGIN>
		<id>3</id>
		<descr>	非法登录。</descr>
	</MERCURY_ERR_ILLEGAL_LOGIN>
	
	<MERCURY_ERR_NAME_PASSWORD>
		<id>4</id>
		<descr>	用户名或者密码不正确。</descr>
	</MERCURY_ERR_NAME_PASSWORD>
	
	<MERCURY_ERR_NAME>
		<id>5</id>
		<descr>	用户名不正确。</descr>
	</MERCURY_ERR_NAME>
	
	<MERCURY_ERR_PASSWORD>
		<id>6</id>
		<descr>	密码不正确。</descr>
	</MERCURY_ERR_PASSWORD>
	
	<MERCURY_ERR_ACCOUNT_CREATE>
		<id>7</id>
		<descr>	创建账号失败（已经存在一个相同的账号）。</descr>
	</MERCURY_ERR_ACCOUNT_CREATE>
	
	<MERCURY_ERR_BUSY>
		<id>8</id>
		<descr>	操作过于繁忙(例如：在服务器前一次请求未执行完毕的情况下连续N次创建账号)。</descr>
	</MERCURY_ERR_BUSY>
	
	<MERCURY_ERR_ANOTHER_LOGON>
		<id>10</id>
		<descr>	当前账号在另一处登录了。</descr>
	</MERCURY_ERR_ANOTHER_LOGON>
</root>